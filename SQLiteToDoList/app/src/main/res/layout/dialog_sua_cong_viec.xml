<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtSuaCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Sua Cong Viec"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnHuySua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSuaCV"
        android:layout_alignBottom="@+id/btnSuaCV"
        android:layout_alignEnd="@+id/txtSuaCV"
        android:layout_weight="1"
        android:text="Huy" />

    <Button
        android:id="@+id/btnSuaCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSuaCV"
        android:layout_below="@+id/txtSuaCV"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:text="Sua" />

</RelativeLayout>