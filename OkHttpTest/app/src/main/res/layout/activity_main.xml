<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.os.okhttptest.MainActivity">

    <Button
        android:id="@+id/btnGeturl"
        android:layout_gravity="center"
        android:text="GET URL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btngetImageView"
        android:layout_gravity="center"
        android:text="GET Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btnposttoserver"
        android:layout_gravity="center"
        android:text="POST TO server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnpostfile"
        android:layout_gravity="center"
        android:text="POST TO server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageViewFile"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />


</LinearLayout>
